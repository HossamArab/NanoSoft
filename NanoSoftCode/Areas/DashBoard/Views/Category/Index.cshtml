@model IEnumerable<Category>
@{
    ViewData["Title"] = "الأقسام الرئيسية";
    Layout = "~/Areas/DashBoard/Views/Shared/_Dashboard.cshtml";
}

<h1 class="main-title">الأقسام الرئيسية</h1>
<a class="btn btn-lg btn-primary" asp-area="Dashboard" asp-controller="Category" asp-action="Create">
    <i class="bi bi-plus-circle"></i>
    إضافة قسم
</a>
@if (!Model.Any())
{
    <div class="alert alert-warning mt-5">
        <h4 class="alert-heading">لا توجد أقسام !</h4>
        <p class="mb-0">لم يتم إضافة أقسام بعد</p>
    </div>
}
else
{
    <div class="mt-5">
        <table class="table table-bordered table-hover border-primary">
            <tbody>
                @foreach (var category in Model)
                {
                    <tr class="border-2 border-success">
                        <td width="80%">
                            <div class="d-flex">
                                <div>
                                    <img src="@($"{ImageSettings.ImagesPath}/{category.ImagePath}")" alt="@category.Name" style="max-width: 90px" />
                                </div>
                                <div class="d-flex flex-column justify-content-center me-5">
                                    <h4 class="text-black">@category.Name</h4>
                                </div>
                            </div>
                        </td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-center">
                                <a asp-action="Update" asp-route-Id="@category.Id" class="btn btn-info rounded rounded-3 ms-3">
                                    <i class="bi bi-pencil-fill fs-5"></i>
                                </a>
                                &nbsp;
                                <a class="btn btn-danger rounded rounded-3 ms-2">
                                    <i class="bi bi-trash3 fs-5"></i>
                                </a>
                            </div>

                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

